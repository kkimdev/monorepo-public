{
  "manifest_version": 3,
  "name": "Keyboard Navigator",
  "version": "1.0.0",
  "description": "Navigate web pages using keyboard hints. Tap 'Shift' to activate.",
  "action": {},
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": ["<all_urls>"]
}
